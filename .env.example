# Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# ==========================================
# Frontend Environment Variables (Vite)
# ==========================================

# Backend API URL
VITE_BACKEND_URL=http://localhost:5002

# AI Services
VITE_GEMINI_API_KEY=your_gemini_api_key_here
VITE_OPENROUTER_API_KEY=your_openrouter_api_key_here

# Translation Service
VITE_DEEPL_API_KEY=your_deepl_api_key_here

# Market Data APIs
VITE_TWELVEDATA_API_KEY=your_twelvedata_api_key_here

# Korean Investment & Securities API
VITE_KIS_APP_KEY=your_kis_app_key_here
VITE_KIS_APP_SECRET=your_kis_app_secret_here

# News and RSS
VITE_FINANCIAL_JUICE_RSS=https://www.financialjuice.com/feed.ashx?xy=rss
VITE_SAVETICKER_API=https://api.saveticker.com

# App Configuration
VITE_APP_NAME=AI Stock Insights
VITE_DEFAULT_MARKET=US

# ==========================================
# Backend Environment Variables (Python/Flask)
# ==========================================

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Korean Investment & Securities API (Backend)
KIS_APP_KEY=your_kis_app_key_here
KIS_APP_SECRET=your_kis_app_secret_here

# News Scheduler Settings
NEWS_SCHEDULER_ENABLED=false
NEWS_SCHEDULER_INTERVAL_SEC=120

# Financial Juice RSS Settings
FINANCIAL_JUICE_MIN_INTERVAL_SEC=180
FINANCIAL_JUICE_JITTER_SEC=15
FINANCIAL_JUICE_MAX_BACKOFF_SEC=900

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_PORT=5002

# ==========================================
# Notes
# ==========================================
# - Never commit the actual .env file to version control
# - Keep this .env.example file updated with new variables
# - API keys should be kept secret and rotated regularly
# - For production, use environment-specific .env files
